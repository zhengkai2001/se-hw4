%table#movies
  %thead
    %tr
      %th{class: ('hilite' if session[:sort_by] == 'title'), id: 'title_header'}= link_to('Movie Title', movies_path(sort_by: 'title'))
      %th{class: ('hilite' if session[:sort_by] == 'director'), id: 'director_header'}= link_to('Director', movies_path(sort_by: 'director'))
      %th{class: ('hilite' if session[:sort_by] == 'rating'), id: 'rating_header'}= link_to('Rating', movies_path(sort_by: 'rating'))
      %th{class: ('hilite' if session[:sort_by] == 'release_date'), id: 'release_date_header'}= link_to('Release Date', movies_path(sort_by: 'release_date'))
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.director
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)