-# in app/views/movies/show.html.haml

= content_for(:title, @movie.title + ' - Rotten Potatoes!')

%h2 Details about #{@movie.title}

%ul#details
  %li
    Director:
    = @movie.director
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime('%B %d, %Y')

%h3 Description:

%p#description= @movie.description

-#- unless @director.nil?
= link_to "Find All Movies Directed by '#{@director}'", director_all_movies_path(@director, :from => @movie.id)
= '<br />'.html_safe

= link_to 'Edit', edit_movie_path(@movie)
= '<br />'.html_safe
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= '<br />'.html_safe
= link_to 'Back to movie list', movies_path
= '<br />'.html_safe
